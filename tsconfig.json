{
  "compilerOptions": {
    "target": "es6",                          
    "module": "commonjs",  
    "sourceMap": true,                     
    "lib": ["es6", "DOM"],                     
    "allowJs": true,
    "outDir": "dist",                          
    "rootDir": "src",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "paths": {
      "~*": ["./*"]
    }
  }
}